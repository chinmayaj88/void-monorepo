{
    "name": "@void-monorepo/backend",
    "version": "1.0.0",
    "private": true,
    "description": "Backend API for Security-First Personal Cloud Drive",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "type-check": "tsc --noEmit",
        "migrate:dev": "tsx scripts/migrate.ts run",
        "migrate:prod": "tsx scripts/migrate.ts run --prod",
        "migrate:status": "tsx scripts/migrate.ts status",
        "init:admin": "tsx scripts/init-admin.ts"
    },
    "dependencies": {
        "@types/multer": "^2.0.0",
        "@types/uuid": "^10.0.0",
        "argon2": "^0.31.2",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "nodemailer": "^6.9.7",
        "oci-objectstorage": "^2.90.0",
        "oci-common": "^2.90.0",
        "otplib": "^12.0.1",
        "pg": "^8.11.3",
        "uuid": "^13.0.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.6",
        "@types/nodemailer": "^6.4.14",
        "@types/pg": "^8.10.9",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "supertest": "^7.1.4",
        "ts-jest": "^29.1.1",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=22.0.0"
    }
}
