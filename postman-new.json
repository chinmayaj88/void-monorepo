									"mode": "raw",
									"raw": "{\n    \"email\": \"{{testEmail}}\",\n    \"password\": \"WrongPassword123!@#\"\n}"
								},
								"url": {
									"raw": "{{base_url}}/api/auth/login",
									"host": [
										"{{base_url}}"
									],
									"path": [
										"api",
										"auth",
										"login"
									]
								}
							}
						}
					]
